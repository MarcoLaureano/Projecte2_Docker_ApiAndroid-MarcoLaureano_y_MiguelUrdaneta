<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inicio"
    android:background="#13a47e">


    <RelativeLayout
        android:id="@+id/encabezado"
        android:layout_width="300dp"
        android:layout_height="260dp"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="180dp"
        tools:ignore="NotSibling">

        <RelativeLayout
            android:id="@+id/alumnosl"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/borde_color"
            tools:ignore="NotSibling"
            android:layout_alignStart="@id/encabezado">

            <ImageView
                android:id="@+id/btnListaAlumnos"
                android:layout_marginTop="10dp"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/leer" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnListaAlumnos"
                android:layout_marginTop="13dp"
                android:text="Alumnos"
                android:layout_centerHorizontal="true"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/grupol"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/borde_color">

            <ImageView
                android:id="@+id/icn_grupo"
                android:layout_marginTop="10dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/grupo"
                android:layout_centerHorizontal="true"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/icn_grupo"
                android:text="Grupo"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/alumnosl"
            android:background="@drawable/borde_color"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/horarios"
                android:layout_marginTop="10dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/horario"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/horarios"
                android:text="Horarios"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/faltasl"
            android:background="@drawable/borde_color"
            android:layout_below="@id/grupol"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/inasistencias"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/login_timeout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/inasistencias"
                android:text="Faltas"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"/>





        </RelativeLayout>


    </RelativeLayout>




</RelativeLayout>